<h1>Edting Book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being update
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: update_book_path(@book.id), method: :patch, local: true do |f| %>

  <h4>本のタイトル</h4>
  <%= f.text_field :title %>

  <h4>感想</h4>
  <%= f.text_area :body %>

 <p><%= f.submit 'Update Book' %></p>

<p>
<%= link_to "Show", book_path(@book.id) %>
|
<%= link_to "Back", '/books' %>
</p>
<% end %>
